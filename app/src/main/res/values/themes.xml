<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.UStudyBuddyV1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="cardViewStyle">@style/CardView</item>
        <item name="colorPrimary">#4F8EF7</item> <!-- Your new color -->
        <item name="colorPrimaryVariant">#3B6DC1</item> <!-- A darker shade if needed -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Text color on primary -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">#4F8EF7</item>
        <item name="colorSecondaryVariant">#3B6DC1</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Other colors -->
        <item name="android:statusBarColor">#4F8EF7</item> <!-- Top notification bar -->
        <item name="android:navigationBarColor">#4F8EF7</item> <!-- Bottom bar -->


    </style>


    <style name="RoundedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">#4F8EF7</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">#808080</item>
    </style>

</resources>
