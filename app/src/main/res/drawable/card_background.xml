<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/white" /> <!-- Change color as needed -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="@color/black" /> <!-- Use color from resources -->

    <!-- Padding inside the card -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
