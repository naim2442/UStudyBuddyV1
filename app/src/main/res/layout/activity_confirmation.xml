<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">


    <!-- Title -->
    <TextView
        android:id="@+id/group_name_display_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>


    <!-- Image Display (if available) -->
    <ImageView
        android:id="@+id/group_image_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="10dp"
        android:contentDescription="Group Image" />



    <!-- Group Subject Display -->
    <TextView
        android:id="@+id/group_subject_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <!-- Group Description Display -->
    <TextView
        android:id="@+id/group_description_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <!-- Location Display -->
    <TextView
        android:id="@+id/location_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location: Not set"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />


    <!-- Tags Display -->
    <TextView
        android:id="@+id/date_time_display_confirm"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date and Time"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tags_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/discard_button_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DISCARD"
            android:backgroundTint="@android:color/holo_red_dark"/>
        <Button
            android:id="@+id/confirm_button_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@android:color/holo_green_dark"/>
    </LinearLayout>
</LinearLayout>
