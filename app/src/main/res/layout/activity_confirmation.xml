<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">

    <!-- Group Name Display -->
    <TextView
        android:id="@+id/group_name_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Name"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />

    <!-- Group Subject Display -->
    <TextView
        android:id="@+id/group_subject_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <!-- Group Description Display -->
    <TextView
        android:id="@+id/group_description_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <!-- Location Display -->
    <TextView
        android:id="@+id/location_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location: Not set"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <!-- Tags Display -->
    <TextView
        android:id="@+id/tags_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <!-- Image Display (if available) -->
    <ImageView
        android:id="@+id/group_image_display_confirm"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="10dp"
        android:contentDescription="Group Image" />

    <!-- Discard Button -->
    <Button
        android:id="@+id/discard_button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discard"
        android:layout_marginBottom="10dp" />

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirm_button_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginBottom="10dp" />
</LinearLayout>
