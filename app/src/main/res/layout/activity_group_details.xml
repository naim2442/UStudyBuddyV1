<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
    android:paddingBottom="16dp">

    <!-- Group Name -->
    <TextView
        android:id="@+id/text_study_group_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Study Group Details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
    android:layout_marginBottom="8dp" />

    <!-- Group Name -->
    <TextView
        android:id="@+id/text_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Creator Name -->
    <TextView
        android:id="@+id/text_group_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creator Name"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Course -->
    <TextView
        android:id="@+id/text_group_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subject -->
    <TextView
        android:id="@+id/text_group_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/text_group_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Location -->
    <TextView
        android:id="@+id/text_group_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Date and Time -->
    <TextView
        android:id="@+id/text_group_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Tags -->
    <TextView
        android:id="@+id/text_group_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tags"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Map View -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:padding="16dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Join Group Button -->
    <Button
        android:id="@+id/button_join_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:layout_gravity="center" />


        <Button
            android:id="@+id/button_leave_group"
            android:layout_width="110dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Leave Group"
            android:textColor="@android:color/holo_red_dark" />
</LinearLayout>
    </androidx.core.widget.NestedScrollView>
