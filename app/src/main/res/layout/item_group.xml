<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Group Name TextView -->
    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <!-- Group Description TextView -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group description goes here"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <!-- Requested for Deletion TextView (Initially hidden) -->
    <TextView
        android:id="@+id/tvRequestedForDeletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requested for Deletion"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:paddingBottom="8dp" />

    <!-- Delete Group Button -->
    <Button
        android:id="@+id/btnDeleteGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Group"
        android:textColor="#FFFFFF"
        android:background="@color/colorDeleteButton" />  <!-- Red background from colors.xml -->
</LinearLayout>
