<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="56dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/stats_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Statistics"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />


        <!-- Content Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Stats Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@android:color/white">

                <!-- Total Groups Joined -->
                <TextView
                    android:id="@+id/total_groups_joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Groups: 5"
                    android:layout_marginEnd="16dp"
                    android:textSize="16sp" />

                <!-- Upcoming Sessions -->
                <TextView
                    android:id="@+id/upcoming_sessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Sessions: 2"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:background="@android:color/white">

                <!-- Total To-Do List -->
                <TextView
                    android:id="@+id/total_todo_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To-Do List: 10"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>


        <!-- Announcements -->
        <TextView
            android:id="@+id/announcements_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announcements"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_announcements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>





        <!-- Latest Study Groups Section -->
        <TextView
            android:id="@+id/latest_study_groups_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Study Groups"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_latest_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>



        <!-- Recommended Videos Section -->
        <TextView
            android:id="@+id/recommended_videos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended Groups"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/no_recommended_groups_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have no recommended groups yet."
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_margin="8dp"
            android:visibility="gone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Latest Study Tips Section -->
        <TextView
            android:id="@+id/latest_study_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study Tips"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_daily_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>


        <!-- Motivational Corner -->
        <TextView
            android:id="@+id/motivational_corner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivational Corner"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_motivational_quotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- To-Do List -->
        <TextView
            android:id="@+id/todo_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To-Do List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_todo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"/>

    </LinearLayout>
</ScrollView>
