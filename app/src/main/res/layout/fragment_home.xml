<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="56dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Announcements -->
        <TextView
            android:id="@+id/announcements_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announcements"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_announcements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>



        <!-- Personalized Dashboard -->
        <TextView
            android:id="@+id/personalized_dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalized Dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <!-- Dashboard Item Example -->
            <TextView
                android:id="@+id/study_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Hours: 5"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/upcoming_deadlines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadlines: 3"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Latest Study Groups Section -->
        <TextView
            android:id="@+id/latest_study_groups_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Study Groups"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_latest_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>



        <!-- Recommended Videos Section -->
        <TextView
            android:id="@+id/recommended_videos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended Videos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Latest Study Tips Section -->
        <TextView
            android:id="@+id/latest_study_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Study Tips"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_daily_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>


        <!-- Motivational Corner -->
        <TextView
            android:id="@+id/motivational_corner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivational Corner"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_motivational_quotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- To-Do List -->
        <TextView
            android:id="@+id/todo_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To-Do List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_todo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/white"
            android:padding="8dp"
            android:clipToPadding="false"/>

    </LinearLayout>
</ScrollView>
