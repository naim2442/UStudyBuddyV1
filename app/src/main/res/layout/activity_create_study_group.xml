<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Study Group"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Group Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/RoundedTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/group_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Subject Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/RoundedTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/group_subject_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description Input -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/RoundedTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/group_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Location Display -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/RoundedTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Selected Location">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/location_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:focusable="false"
                android:cursorVisible="false"
                android:inputType="none"
                android:background="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Map Fragment for selecting location -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:layout_marginTop="16dp" />



        <!-- Tags Selection (Checkboxes) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Predefined tags -->
            <CheckBox
                android:id="@+id/tag_itt626"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITT626" />

            <CheckBox
                android:id="@+id/tag_backend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backend" />

            <CheckBox
                android:id="@+id/tag_semester5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester 5" />
        </LinearLayout>

        <!-- Upload Group Image Button -->
        <Button
            android:id="@+id/upload_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4F8EF7"
            android:background="@drawable/rounded_button"
            android:text="Upload Group Image"
            android:layout_marginTop="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/create_group_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4F8EF7"
            android:text="Create Group"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
