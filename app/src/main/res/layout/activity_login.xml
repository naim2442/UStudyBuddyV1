<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity.LoginActivity">

    <!-- FrameLayout for image background and overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wireframe_login2"
        android:scaleType="centerCrop"/>

        <!-- Semi-transparent overlay -->

    </FrameLayout>

    <!-- App Logo -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="170dp"
        android:layout_height="156dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/app_logo_alt"
        app:layout_constraintBottom_toTopOf="@id/welcome_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="234dp"
        android:layout_height="66dp"
        android:text="WELCOME"
        android:textColor="#2A3A59"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_logo" />

    <!-- Email Input Layout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_input"
        style="@style/RoundedTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        android:hint="Email">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <!-- Icon Box for Email -->
            <LinearLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:background="@drawable/rounded_icon_background"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_mail_24"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:enabled="true"
                android:focusable="true"
                android:background="@drawable/rounded_edittext"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColor="#2A3A59" />
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Input Layout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_input"
        style="@style/RoundedTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        android:hint="Password">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <!-- Icon Box for Password -->
            <LinearLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:background="@drawable/rounded_icon_background"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:id="@+id/password_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_lock_24"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:enabled="true"
                android:background="@drawable/rounded_edittext"
                android:focusable="true"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#2A3A59" />
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="195dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#4F8EF7"
        android:text="Log In"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_input" />

    <!-- Forgot Password Button -->
    <Button
        android:id="@+id/forgot_password"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="Forgot Password"
        android:textColor="#000000"
        android:visibility="gone"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button" />

    <!-- Register Button -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="#808080"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgot_password" />

    <!-- Trademark Section -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <!-- Trademark Text -->
        <TextView
            android:id="@+id/trademark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2024 NeoTech Limited"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:contentDescription="Company Logo"
            android:src="@drawable/company_logo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
